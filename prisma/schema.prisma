generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  first_name String
  last_name  String
  email      String   @unique
  password   String
  phone      Int
  dob        DateTime
  gender     Gender   @default(M)
  address    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  Artist     Artist[]
}

model Artist {
  id                   Int      @id @default(autoincrement())
  user_id              Int
  user                 User     @relation(fields: [user_id], references: [id])
  name                 String
  dob                  DateTime
  gender               Gender   @default(M)
  address              String
  first_release_year   DateTime
  no_of_albums_release Int
  created_at           DateTime @default(now())
  updated_at           DateTime @updatedAt
  Music                Music[]
}

model Music {
  id         Int      @id @default(autoincrement())
  artist_id  Int
  artist     Artist   @relation(fields: [artist_id], references: [id])
  title      String
  album_name String
  genre      Genre    @default(CLASSIC)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

enum Gender {
  M
  F
  O
}

enum Genre {
  RNB
  COUNTRY
  CLASSIC
  ROCK
  JAZZ
}
